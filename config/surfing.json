{
  "page_generators": [
    "google", "sitemap", "site-scraping"
  ],
  "distribution_types": [
    "uniform", "log-normal"
  ],
  "schemes": {
    "default": {
      "page_generator": "site-scraping",
      "time_between_page": {
        "type": "uniform",
        "low_boundary": 1,
        "up_boundary": 15
      },
      "page_number":{
        "type": "log-normal",
        "M": 2,
        "D": 1
      }
    },
    "fast_going": {
      "page_generator": "site-scraping",
      "time_between_page": {
        "type": "uniform",
        "low_boundary": 1,
        "up_boundary": 5
      },
      "page_number":{
        "type": "uniform",
        "low_boundary": 1,
        "up_boundary": 10
      }
    }
  },
  "sites":[
    {
      "link": "habrahabr.ru",
      "scheme": {
          "page_generator": "sitemap",
          "time_between_page": {
            "type": "uniform",
            "low_boundary": 10,
            "up_boundary": 40
          },
          "page_number":{
            "type": "fix",
            "value": 200
          }
      }
    }
  ]
}